<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd_theme">

    <TextView
        android:id="@+id/setting"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/rajbubble">

        <RelativeLayout
            android:id="@+id/wifilayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/clrall">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Wifi"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/toggle"
                android:layout_marginEnd="14dp"
                android:background="@drawable/fav_clearall_bubble"
                android:button="@drawable/toggle_wifi"
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clrall"
            android:layout_below="@id/wifilayout"
            android:text="Clear all favourites"
            android:background="@drawable/clrall"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />


        <Button
            android:id="@+id/intern_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clrall"
            android:background="@drawable/clrall"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Check internet connection" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/intern_con"
            android:layout_marginTop="10dp"
            android:id="@+id/fdbck"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/clrall"
            android:text="Feedback"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fdbck"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Help"
            android:id="@+id/help"
            android:layout_marginBottom="20dp"
            android:background="@drawable/clrall"/>

    </RelativeLayout>
</RelativeLayout>