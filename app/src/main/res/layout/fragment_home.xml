<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backgrnd_theme">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:letterSpacing="1.3"
        android:text="TWINFO"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:background="@drawable/rajbubble">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/inp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/bubbleedittext"
                android:singleLine="true"
                android:hint="Enter Handle"
                android:padding="16dp"
                android:textColor="#50000000"
                android:textSize="16sp"
                />

            <ToggleButton
                android:id="@+id/togglebutton"
                android:layout_width="50dp"
                android:layout_height="54dp"
                android:textOn=""
                android:textOff=""
                android:foreground="@drawable/lovebutton"
                android:background="@drawable/check"
                />
               />
            <!--<ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14.5dp"
                android:background="@drawable/lovebutton"
                android:src="@drawable/ic_favorite_border_black_24dp"/>-->
        </LinearLayout>


        <Button
            android:layout_marginTop="24dp"
            android:id="@+id/button_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:elevation="0dp"
            android:background="@drawable/home_button"
            android:text="TWINFO"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/rajbubble">

        <TextView
            android:id="@+id/tv"
            android:layout_margin="16dp"
            android:textSize="16sp"
            android:textColor="#85000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>